{
  "extends": "../../../tsconfig.server.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "composite": true,
    "incremental": true,
    "moduleResolution": "Bundler",
    "module": "ESNext",
    "target": "ES2022"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "tests"
  ],
  "ignoreDeprecations": "6.0"
}