{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,
    "composite": false,
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "noEmit": true,
    "moduleResolution": "node",
    "baseUrl": "."
  },
  "ignoreDeprecations": "6.0",
  "include": [
    "src/**/*",
    "index.ts"
  ]
}
