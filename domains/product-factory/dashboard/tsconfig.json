{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,
    "composite": false,
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "noEmit": true,
    "moduleResolution": "Bundler",
    "baseUrl": ".",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "jsx": "preserve"
  },
  "include": [
    "src/**/*",
    "index.ts"
  ]
}
