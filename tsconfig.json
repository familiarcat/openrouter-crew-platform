{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@crew/*": [
        "domains/shared/crew-api-client/src/*"
      ],
      "@shared/cost-tracking/*": [
        "domains/shared/cost-tracking/src/*"
      ],
      "@shared/crew-coordination/*": [
        "domains/shared/crew-coordination/src/*"
      ],
      "@shared/schemas/*": [
        "domains/shared/schemas/src/*"
      ],
      "@vscode/*": [
        "domains/vscode-extension/src/*"
      ],
      "@cli/*": [
        "apps/cli/src/*"
      ],
      "@dashboard/*": [
        "apps/unified-dashboard/*"
      ]
    }
  },
  "ignoreDeprecations": "6.0",
  "exclude": [
    "node_modules",
    "dist",
    ".next",
    "out"
  ],
  "references": [
    {
      "path": "./apps/cli"
    },
    {
      "path": "./domains/shared/crew-coordination"
    },
    {
      "path": "./domains/shared/cost-tracking"
    },
    {
      "path": "./domains/shared/schemas"
    },
    {
      "path": "./domains/shared/crew-api-client"
    },
    {
      "path": "./domains/vscode-extension"
    },
    {
      "path": "./packages/n8n-nodes"
    }
  ]
}
